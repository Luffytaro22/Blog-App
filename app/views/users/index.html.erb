<div class="users-container">
	<%= render 'side_menu' %>
	<div style="width: 100%;">
		<i class="fa-solid fa-bars", style="font-size: 1.6em; position: fixed;", onclick="document.querySelector('.side-menu').style.display = 'block'"></i>
	</div>
	<% @users.each do |user| %>
		<div class="users">
			<img src="<%= user.photo %>" class="users-photos" />
			<div class="user-container">
				<%= link_to user_path(user.id), method: :get do %>
					<p class="users-name"><%= user.name %></p>
				<% end %>
				<p class="users-posts-counter">Number of posts: <%= user.posts_counter %></p>
			</div>
		</div>
	<% end %>
</div>
