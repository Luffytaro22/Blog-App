<div class="users-container">
	<% @users.each do |user| %>
		<div class="users">
			<img src="<%= user.photo %>" class="users-photos" />
			<div class="user-container">
				<h2 class="users-name"><%= user.name %></h2>
				<p class="users-posts-counter">Number of posts: <%= user.posts_counter %></p>
			</div>
		</div>
	<% end %>
</div>